<UserControl x:Class="Monitor.Power"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="32" MouseEnter="img_power_MouseEnter" MouseLeave="img_power_MouseLeave">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="32"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="txt_power" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="#009688" Foreground="White"></Label>
        <Image x:Name="img_power" Grid.Column="1" Width="32" Height="16" Source="/Monitor;component/Images/power_on.png"></Image>
    </Grid>
</UserControl>
